{
  "name": "saucedemo",
  "version": "1.0.0",
  "description": "",
  "main": "cypress.config.js",
  "scripts": {
    "test": "npx cypress run",
    "test:headed": "npx cypress run --headed",
    "test:chrome": "npx cypress run --browser chrome",
    "test:firefox": "npx cypress run --browser firefox",
    "test:edge": "npx cypress run --browser edge",
    "test:open": "npx cypress open",
    "test:login": "npx cypress run --spec \"cypress/e2e/login.feature\"",
    "test:inventory": "npx cypress run --spec \"cypress/e2e/inventory.feature\"",
    "test:cart": "npx cypress run --spec \"cypress/e2e/cart.feature\"",
    "test:report": "start cypress/reports/cucumber-report.html"
  },
  "private": true,
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^22.0.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.4"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": "cypress/e2e/**/*.js",
    "json": {
      "enabled": true,
      "output": "cypress/reports/cucumber-report.json"
    },
    "html": {
      "enabled": true,
      "output": "cypress/reports/cucumber-report.html"
    }
  },
  "devDependencies": {
    "cypress": "^14.5.2",
    "cypress-mochawesome-reporter": "^4.0.0"
  }
}
